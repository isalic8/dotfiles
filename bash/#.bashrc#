#vim: filetype=conf :
#!/bin/bash
umask 0027
shopt -s autocd
set -o vi
bind -m vi-command 'Control-l: clear-screen'
ind -m vi-insert 'Control-l: clear-screen'
bind -m vi-command 'Control-k: kill-whole-line'
bind -m vi-insert 'Control-k: kill-whole-line'
bind "\C-f: 'vifmrun . \r'"
bind "\C-v: 'nvim '"

source "$HOME/.config/bash/exports"
source "$HOME/.config/bash/functions"
source "$HOME/.config/bash/aliases"
# If we're using tmux, use a different color scheme
#[ ! $TMUX = "" ] && alias vim="nvim +\"colo default\""

# Node user directory
[ ! -d "$HOME/.node" ] && mkdir -p "$HOME/.node"
